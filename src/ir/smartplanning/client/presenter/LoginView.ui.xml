<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel >
		<div class="row height_complete">
			<div class="col-md-8 height_complete">
				<h1>به سایت مشاوره هوشمند خوش آمدید</h1>
			</div>
			<div class="col-md-4 height_complete">

				<div class="front container-fluid">
					<div class="form-group">
						<label>نام کاربری</label>
						<g:TextBox ui:field="userName" styleName="form-control"></g:TextBox>
					</div>
					<div class="form-group">
						<label>رمز عبور</label>
						<g:PasswordTextBox ui:field="password"
							styleName="form-control"></g:PasswordTextBox>
					</div>
					<g:Button ui:field="login" styleName="btn btn-primary float_left">ورود</g:Button>

				</div>
				<div class="front container-fluid">
					<label style="magin-top:5px">برای عضویت در سایت اینجا را کلیک کنید</label>
					<g:Button ui:field="register" styleName="btn btn-defult float_left">ثبت نام</g:Button>
				</div>

			</div>

		</div>

	</g:HTMLPanel>
</ui:UiBinder>
